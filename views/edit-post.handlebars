<section class="user-posts-section">
  <a class="edit-post-a-tag" href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <input class="edit-post-input" name="post-title" type="text" />
    </div>
    <div>
      Post is created by you on {{format_date post.created_at}}
      |
      and has <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="save-post-btn">Save change</button>
    <button type="button" class="delete-post-btn">Delete post</button>
  </form>
</section>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment-post.js"></script>