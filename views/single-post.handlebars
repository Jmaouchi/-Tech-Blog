
{{> post-post post}}

{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit" class="add-comment-btn">add comment</button>
  </div>
</form>
{{/if}}

<div class="comments">
  {{!-- to add a partial you need to specify the file name that you are getting the code from, and the data you want to get the comments from --}}
  {{>comments post.comments}}
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>
{{/if}}